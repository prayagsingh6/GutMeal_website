@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <section class="content-container">
        <h2 class="welcome-title">Welcome to GutMeal</h2>
        <p class="tagline">Your health-focused meal tracking assistant.</p>
        <p>
            GutMeal is an innovative health solution that focuses on personalized nutrition
            based on your gut health. By analyzing factors like your gut microbiome, dietary habits, and lifestyle, GutMeal aims to provide meal plans tailored to your unique digestive needs, helping you manage food sensitivities and improve overall well-being.
        </p>
        <div class="action-buttons">
            <button onclick="location.href='/Create'">Start Your Journey</button>
            <button onclick="location.href='/Read'">Track Your Data</button>
            <button onclick="location.href='/Update'">Adjust Your Data</button>
            <button onclick="location.href='/Delete'">Reset Progress</button>
        </div>
    </section>
</body>
</html>