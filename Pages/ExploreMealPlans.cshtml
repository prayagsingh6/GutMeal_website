@page
@{
    ViewData["Title"] = "Explore Different Meal Plans";
}

<div class="info-section">
    <h2>Explore Different Meal Plans</h2>

    <p>Discover a variety of meal plans for a healthier lifestyle.</p>
</div>


<div class="meal-plan-gallery">
    <div class="meal-plan">
        <img src="~/images/meal1.jpg" alt="Vegetarian Meal Plan" />
        <h3>Vegetarian Meal Plan</h3>
        <p>A healthy, balanced vegetarian meal plan for a sustainable diet.</p>
        <div class="meal-items">
            <ul>
                <li>Quinoa Salad</li>
                <li>Grilled Veggies</li>
                <li>Avocado Toast</li>
            </ul>
        </div>
    </div>

    <div class="meal-plan">
        <img src="~/images/meal2.jpg" alt="High-Protein Meal Plan" />
        <h3>High-Protein Meal Plan</h3>
        <p>Designed for muscle growth and fitness, packed with protein.</p>
        <div class="meal-items">
            <ul>
                <li>Grilled Chicken</li>
                <li>Egg Whites</li>
                <li>Salmon</li>
            </ul>
        </div>
    </div>

    <div class="meal-plan">
        <img src="~/images/meal3.jpg" alt="Low-Carb Meal Plan" />
        <h3>Low-Carb Meal Plan</h3>
        <p>A meal plan for those looking to reduce their carb intake.</p>
        <div class="meal-items">
            <ul>
                <li>Spinach Salad</li>
                <li>Grilled Salmon</li>
                <li>Roasted Chicken</li>
            </ul>
        </div>
    </div>

    <div class="meal-plan">
        <img src="~/images/meal4.jpg" alt="Balanced Diet Meal Plan" />
        <h3>Balanced Diet Meal Plan</h3>
        <p>Includes a variety of meals for a well-balanced diet.</p>
        <div class="meal-items">
            <ul>
                <li>Brown Rice</li>
                <li>Grilled Veggies</li>
                <li>Lean Beef</li>
            </ul>
        </div>
    </div>
</div>
